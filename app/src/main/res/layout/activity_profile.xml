<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    android:background="@color/black">

    <ImageButton
        android:id="@+id/close"
        android:layout_width="63dp"
        android:layout_height="67dp"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_x" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profile"
        android:src="@drawable/teamsprofile"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yasser Ahmed Mohamed Hassan"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student First"
        android:textColor="@color/lightgrey"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:alpha="0.4"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Science"
        android:textColor="@color/lightgrey"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:alpha="0.4"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/check"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textColor="@color/lightgrey"
            android:layout_gravity="center_horizontal"
            android:textSize="14dp"
            android:alpha="0.4"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/c"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/chatt"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:onClick="chat"/>
        <ImageView
            android:id="@+id/s"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sound"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:onClick="sound"/>
        <ImageView
            android:id="@+id/o"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/organization"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:onClick="organization"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:dashWidth="10dp"
        android:dashGap="5dp"
        android:layout_marginTop="20dp"
        android:alpha="0.2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15dp"
        android:alpha="0.5"
        android:textColor="@color/lightgrey"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:paddingLeft="10dp"/>
    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sim_yassermohamed53158@alexu.edu.eg"
        android:textColor="@color/purple_200"
        android:autoLink="email"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:dashWidth="10dp"
        android:dashGap="5dp"
        android:layout_marginTop="20dp"
        android:alpha="0.2"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_gravity="center"
        android:text="Delete My Account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="Log out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        android:onClick="logout"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</LinearLayout>